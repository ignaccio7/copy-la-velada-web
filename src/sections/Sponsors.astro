---
import { SPONSORS } from "@/consts/sponsors";
const sponsors = SPONSORS.filter((s) => s.id !== "infojobs");
const infojobs = SPONSORS.find((s) => s.id === "infojobs");
---

<section class="sponsors text-primary text-center mt-16">
  <h2 class="text-3xl font-semibold uppercase mb-4">Patrocinadores</h2>
  <p class="text-xl">
    La Velada puede llevarse a cabo gracias a la colaboraci√≥n de...
  </p>
  <div class="flex flex-wrap justify-center items-center gap-4 mt-4">
    {
      sponsors.map((sponsor) => {
        return (
          // <a href={sponsor.url} rel="noopener noreferrer" target="_blank"
          // class="group basis-[330px] flex justify-center h-36 bg-gradient-to-b from-white/10 via-transparent to-transparent
          // hover:from-white/20 transition-all duration-500">
          <a
            href={sponsor.url}
            rel="noopener noreferrer"
            target="_blank"
            class="sponsor-card group basis-[330px] flex justify-center h-36"
          >
            <img
              width={sponsor.image.width}
              height={sponsor.image.height}
              src={`/img/sponsors/${sponsor.id}.svg`}
              alt={`Imagen de la empresa auspiciadora ${sponsor.name}`}
              class="group-hover:scale-110 transition duration-200"
            />
          </a>
        );
      })
    }
  </div>
  <div class="flex justify-center mt-4 items-center text-2xl gap-4">
    Web patrocinada por
    <a href={infojobs?.url} rel="noopener noreferrer" target="_blank">
      <img
        src={`/img/sponsors/${infojobs?.id}.svg`}
        alt={`Imagen de la empresa auspiciadora ${infojobs?.name}`}
        width={infojobs?.image.width}        
        height={infojobs?.image.height}
        class="hover:scale-110 transition-transform duration-150"
      />
    </a>
  </div>
</section>

<style>
  .sponsor-card {
    background-image: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0.12) 0%,
      transparent 70%
    );
    position: relative;
  }
  .sponsor-card::before {
    content: "";
    position: absolute;
    inset: 0;
    background-image: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0.15) 0%,
      transparent 80%
    );
    height: 0;
    opacity: 0;
    transition:
      opacity 0.2s ease,
      height 0.2s ease;
  }
  .sponsor-card:hover::before {
    opacity: 1;
    height: 80%;
  }
</style>
